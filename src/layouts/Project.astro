---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';

import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

type Props = CollectionEntry<'projects'>['data'];

const { title, pubDate, image, tags, download } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<article class="space-y-5">
				<div class="hero-image rounded-lg overflow-clip">
					{image && <Image width={1020} height={510} src={image} alt={title} />} 
				</div>
				<div class="prose space-y-3">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
						</div>
						<h1>{title}</h1>
						<div class="flex flex-row items-center gap-2">
								{tags && tags.map((t) => (
								<p class="text-white text-sm outline rounded-full w-fit px-3 py-1">{t}</p>
								))}
						</div>
						<hr>
					</div>
					<slot />

					{download ? (<a target="_blank" href={download} class="btn">DOWNLOAD THE GAME</a>) : <div class="btn">THE GAME IS UNDER DEVELOPMENT</div>}
				</div>
			</article>
        </main>
        <Footer />
	</body>
</html>
	
